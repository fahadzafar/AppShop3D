<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shop3d.activity.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="3dip"
            android:orientation="horizontal">


            <shop3d.util.CustomFontBoldTextView
                android:id="@+id/checkout_order_item_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_marginRight="10dp"
                android:padding="2dip"
                android:singleLine="true"
                android:text="Order Items Cost:"
                android:textColor="#000000"
                android:textSize="14sp" />



            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_total_order_item_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="12sp"></shop3d.util.CustomFontTextView>

        </LinearLayout>



        <shop3d.util.CustomFontBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="2dip"
            android:singleLine="true"
            android:text="Shipping Address:"
            android:textColor="#000000"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >

            <Spinner
                android:id="@+id/checkout_spinner_Shipping_Addresses"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:prompt="@string/Main_TitleSpinnerCategories" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_bottom_line"></LinearLayout>
</LinearLayout>



            <Button
                android:id="@+id/checkout_btn_add_address"
                android:layout_width="100dp"
                android:layout_height="35dp"
android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:background="@drawable/background_btn_state"
                android:textColor="@color/white_color"
                android:text="+ADD" />
        </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Address Title:"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        <shop3d.util.CustomFontTextView
            android:id="@+id/checkout_ShippingTitle"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TITLE"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            android:textStyle="bold" />
        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Name:"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
    <shop3d.util.CustomFontTextView
            android:id="@+id/checkout_ShippingName"
        android:layout_width="0dp"
        android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Name"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Address:"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        <shop3d.util.CustomFontTextView
            android:id="@+id/checkout_ShippingLine1"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="Address line 1"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:text=""/>
        <shop3d.util.CustomFontTextView
            android:id="@+id/checkout_ShippingLine2"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="Address line 2"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />

</LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="City:"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        <shop3d.util.CustomFontTextView
            android:id="@+id/checkout_ShippingCity"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="City"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="State:"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        <shop3d.util.CustomFontTextView
            android:id="@+id/checkout_ShippingState"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="Maryland"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Zip Code:"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        <shop3d.util.CustomFontTextView
            android:id="@+id/checkout_ShippingZipcode"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="00000"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <shop3d.util.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Country:"
            android:layout_marginLeft="5dp"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/checkout_ShippingCountry"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="USA"
            android:textColor="#aaaaaa"
            android:textSize="12sp" />
        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_bottom_line"></LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="3dip"
            android:orientation="horizontal">

            <shop3d.util.CustomFontBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping:"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:textSize="14sp"></shop3d.util.CustomFontBoldTextView>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >
            <Spinner
                android:id="@+id/checkout_spinner_shiping_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:prompt="@string/Main_TitleSpinnerCategories" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_bottom_line"></LinearLayout>
</LinearLayout>

            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_shipping_option_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="0"
                android:textColor="#000000"
                android:textSize="12sp"></shop3d.util.CustomFontTextView>

        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_bottom_line"></LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="3dip"
            android:orientation="horizontal">

            <shop3d.util.CustomFontBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax: "
                android:textColor="#000000"
                android:textSize="14sp"></shop3d.util.CustomFontBoldTextView>

            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_total_tax_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#000000"
                android:textSize="12sp"></shop3d.util.CustomFontTextView>

        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_bottom_line"></LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="3dip"
            android:orientation="horizontal">

            <shop3d.util.CustomFontBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Order Cost: "
                android:textColor="#000000"
                android:textSize="14sp"></shop3d.util.CustomFontBoldTextView>

            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_total_order_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#000000"
                android:textSize="12sp"></shop3d.util.CustomFontTextView>

        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_bottom_line"></LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/checkout_cc_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="5dip"
            android:visibility="visible">

            <shop3d.util.CustomFontBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="2dip"
                android:singleLine="true"
                android:text="Payment Method"
                android:textColor="#000000"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1" >

                <Spinner
                    android:id="@+id/checkout_spinner_cc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:prompt="@string/Main_TitleSpinnerCategories" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_bottom_line"></LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/checkout_btn_add_cc"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/white_color"
                    android:background="@drawable/background_btn_state"
                    android:text="+ADD" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <shop3d.util.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Title:"
                    android:layout_marginLeft="5dp"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />
            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_cc_title"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Personal"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <shop3d.util.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Name:"
                    android:layout_marginLeft="5dp"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />
            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_cc_name"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Joe Smith"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
</LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <shop3d.util.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Number:"
                    android:layout_marginLeft="5dp"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />
            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_cc_number"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="XXXXXXXXXXXX-1234"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
</LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <shop3d.util.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Expiery:"
                    android:layout_marginLeft="5dp"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />
            <shop3d.util.CustomFontTextView
                android:id="@+id/checkout_cc_expiery"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="3/18"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
                </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_bottom_line"></LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/checkout_btn_complete_checkout"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:textColor="@color/white_color"
            android:textSize="14sp"
            android:background="@drawable/background_btn_state"
            android:text="Complete Checkout" />

    </LinearLayout>
</ScrollView>