<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <EditText
        android:id="@+id/dlg_add_address_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:hint="Title (e.g. Home)"
        android:maxLength="80"
        android:background="@null"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_bottom_line"></LinearLayout>


    <EditText
        android:id="@+id/dlg_add_address_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="Name (e.g. John Spartan)"
        android:maxLength="80"
        android:textSize="14sp"
        android:maxLines="1"
        android:paddingLeft="5dp"

        android:background="@null"
        android:singleLine="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_bottom_line"></LinearLayout>


    <EditText
        android:id="@+id/dlg_add_address_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:hint="Address line 1"
        android:maxLength="80"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_bottom_line"></LinearLayout>


    <EditText
        android:id="@+id/dlg_add_address_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:hint="Address line 2"
        android:maxLength="80"
        android:maxLines="1"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_bottom_line"></LinearLayout>


    android:singleLine="true" />

    <EditText
        android:id="@+id/dlg_add_address_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:hint="City"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_bottom_line"></LinearLayout>



    <EditText
        android:id="@+id/dlg_add_address_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:hint="State"
        android:maxLines="1"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@null"

        android:singleLine="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_bottom_line"></LinearLayout>



    <EditText
        android:id="@+id/dlg_add_address_zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:hint="Zipcode / Postal Code"
        android:maxLength="80"
        android:maxLines="1"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_bottom_line"></LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:text="Country: "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1.3">

            <Spinner
                android:id="@+id/dlg_address_spnr_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/country_arrays"
                android:prompt="@string/Main_TitleSpinnerCategories" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_bottom_line"></LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dlg_add_address_btn_ok"
            android:layout_width="100dp"
            android:layout_height="30dp"
android:textColor="@color/white_color"
android:background="@drawable/background_btn_state"
            android:text="Ok"
            android:textSize="16sp"
            android:layout_alignTop="@+id/dlg_add_address_btn_cancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp" />

        <Button
            android:id="@+id/dlg_add_address_btn_cancel"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/background_btn_state"
            android:textColor="@color/white_color"
            android:text="Cancel"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />
    </RelativeLayout>

</LinearLayout>