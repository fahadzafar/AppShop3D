<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="Cart Items"
        android:textColor="#000000"
        android:textSize="24dip"></TextView>

    <ListView
        android:id="@+id/cart_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff" />

    <View
        android:layout_width="10dp"
        android:layout_height="10dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="10dp"
        android:layout_height="10dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dip"
        android:orientation="horizontal">

        <shop3d.util.CustomFontBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="Total Cost: "
            android:textColor="#000000"
            android:textSize="16sp"></shop3d.util.CustomFontBoldTextView>


        <shop3d.util.CustomFontTextView

            android:id="@+id/shoppingCart_TotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="0"
            android:textColor="#000000"
            android:textSize="14sp"></shop3d.util.CustomFontTextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shopcart_BtnKeepShopping"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/background_btn_state"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/white_color"

            android:text="Keep Shopping" />

        <Button
            android:id="@+id/shopcart_BtnCheckout"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/white_color"
            android:background="@drawable/background_btn_state"
            android:text="Check Out" />
    </LinearLayout>


</LinearLayout>