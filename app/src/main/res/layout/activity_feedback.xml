<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shop3d.activity.FeedbackActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">


        <shop3d.util.CustomFontBoldTextView
            android:id="@+id/suggestion_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:text="Comments, suggestions or feature request"
            android:textSize="14sp"></shop3d.util.CustomFontBoldTextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/feedback_userdata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:inputType="textEmailAddress|textMultiLine"
                android:lines="20"
                android:minLines="5"
                android:background="@null"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:textSize="12sp"
                android:singleLine="false" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_bottom_line"></LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/about_btn_back"
            android:layout_width="100dp"
            android:background="@drawable/background_btn_state"
            android:textColor="@color/white_color"
android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"

            android:text="Submit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:background="@drawable/ic_bottom_line"></LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
         <shop3d.util.CustomFontBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="Recommend a character you would like to see"
            android:textSize="14sp"></shop3d.util.CustomFontBoldTextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/feedback_userCharName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:hint="Name, e.g.  Simon the Unwise"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:background="@null"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_bottom_line"></LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/feedback_userCharLore"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:hint="Lore and Legend."
                    android:inputType="textEmailAddress|textMultiLine"
                    android:lines="10"
                    android:minLines="5"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:scrollHorizontally="false"
                    android:textSize="12sp"
                    android:scrollbars="vertical" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_bottom_line"></LinearLayout>

            </LinearLayout>

        <Button
            android:id="@+id/about_btn_userRecommendedCharacter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_state"
            android:textColor="@color/white_color"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:text="Having this character would be nice" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>